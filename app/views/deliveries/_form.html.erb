<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-info">

        <div class="box-header">
          <h3 class="box-title">Nova Entrega de Software</h3>
        </div>

          

            <%= form_for(@delivery, html: { class: "box-body", role: "form" }) do |f| %>
            <% if @delivery.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4><%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being saved:</h4>

              <ul>
                <% @delivery.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <% if flash[:alert] %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fa fa-ban"></i> <%= flash[:alert] %>
                  
                </div>
          <% end %>

            <!-- Projeto -->
            <div class="col-md-6">
              <div class="form-group">
                
                <%= f.label "Projeto *" %>

                <%= f.collection_select :project_id, @projects, :id, :name, {class: "form-control"} %>

              </div>
            </div>
            <!-- Projeto -->


            <!-- Descricao -->
            <div class="col-md-6">
              <div class="form-group">
                
                <%= f.label "Descricao"%>
                
                <%= f.text_field :software, class: "form-control", id: "txt_entrega_descricao", placeholder: "" %>

              </div>
            </div>
            <!-- Descricao -->

            <!-- Vers찾o -->
            <div class="col-md-6">
              <div class="form-group">
                
                <%= f.label "Vers찾o *" %>

                <%= f.text_field :versao, class: "form-control", id: "txt_entrega_versao", placeholder: "" %>

              </div>
            </div>
            <!-- Vers찾o -->


            <!-- Entregavel -->
            <div class="col-md-6">
              <div class="form-group">
                
                <%= f.label "Entregavel *"%>
                
                <%= f.text_field :entregavel, class: "form-control", id: "txt_entrega_entregavel", placeholder: "" %>

              </div>
            </div>
            <!-- Entregavel -->

            <!-- Anexo -->
            <div class="col-md-12">
              <div class="form-group">
                
                <%= f.label "Anexo"%>
                
                <%= f.file_field :anexo, id: "txt_entrega_anexo" %>
                      
              </div>
            </div>
            <!-- Anexo -->


              <div class="form-group">
                  <%= f.submit class: "btn btn-primary" %>
              </div>

              <div class="form-group has-error">
                <label class="control-label" for="inputError">
                  * Campos Obrigat처rios
                </label>
              </div>
            <% end %>
      </div>
    </div>
  </div>
</section>