<section class="content-header">
  <h1>
    Lista de Entregas de Software
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> DashBoard</a></li>
    <li class="active">Entregas de Software</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-info">

        <div class="box-header">
          <h3 class="box-title">Entregas de Software</h3>
        </div>


        <div class="box-body">

          <div class="col-md-3">
            <td>
              <a class="btn btn-block btn-info" href="/deliveries/new">Cadastrar Entrega de Software</a>
            </td>
          </div>

          <div class="box-tools pull-right">
            <div class="input-group input-group-sm">
              <%= form_tag :deliveries, :class => "input-group custom-search-form", :method => 'get' do %>
              <%= text_field_tag :search, params[:search], :class => "form-control", :placeholder => "Digite aqui" %>

              <span class="input-group-btn">
                <%= submit_tag "Pesquisar", :class => "btn btn-default fa fa-search"%>
              </span>
              
              <% end %>
            </div>
          </div>


        </div>

        <div class="box-body table-responsive">

          <table class="table">

            <tr>
              <th>Abrir</th>
              <th>ID</th>
              <th>Projeto</th>
              <th>Versão</th>
              <th>Entregável</th>
              <th>Anexo</th>
            </tr>

            <% @deliveries.each do |delivery| %>
            <tr>

              <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, delivery %></td>
              <td><%= delivery.id %></td>
              <td><%= delivery.project_id %></td>
              <td><%= delivery.versao %></td>
              <td><%= delivery.entregavel %></td>
              
              <td>

                <% if delivery.anexo != nil %>
                <span class="label label-success">Ativo</span>
                <% else %>
                <span class="label label-danger">Inativo</span>
                <% end %>

              </td>

            </tr>
            <% end %>

          </table>
        </div>


      </div>
    </div>
  </div>

</section>
