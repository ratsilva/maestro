<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-info">

        <div class="box-header">
          <h3 class="box-title">Novo Conhecimento</h3>
        </div>

          

            <%= form_for(@knowledge, html: { class: "box-body", role: "form" }) do |f| %>
            <% if @knowledge.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4><%= pluralize(@knowledge.errors.count, "error") %> prohibited this knowledge from being saved:</h4>

              <ul>
                <% @knowledge.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <% if flash[:alert] %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fa fa-ban"></i> <%= flash[:alert] %>
                  
                </div>
          <% end %>

            <!-- Nome da Conhecimento -->
            <div class="col-md-6">
              <div class="form-group">
                
                <%= f.label "Nome do Conhecimento *" %>
                
                <%= f.text_field :name, class: "form-control", id: "txt_nome_conhecimento", placeholder: "" %>

              </div>
            </div>
            <!-- Nome da Conhecimento -->


            <!-- Tipo -->
            <div class="col-md-6">
              <div class="form-group">
                
                <%= f.label "Tipo *"%>
                
                <%= f.select(:group, ['Linguagem', 'Banco de Dados', 'Metodologia de Desenvolvimento', 'Paradigma de Programação', 'Framework', 'IDE', 'Editor de Imagem', 'Editor de Texto'], {}, { :class => 'form-control' }) %>


              </div>
            </div>
            <!-- Tipo -->

              <div class="form-group">
                  <%= f.submit class: "btn btn-primary" %>
              </div>

              <div class="form-group has-error">
                <label class="control-label" for="inputError">
                  * Campos Obrigatórios
                </label>
              </div>
            <% end %>
      </div>
    </div>
  </div>
</section>